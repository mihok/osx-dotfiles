# enter fullscreen mode for the focused container
shift + alt - f : chunkc tiling::window --toggle fullscreen

# change focus between tiling / floating windows
shift + alt - space : chunkc tiling::window --toggle float

# change layout of desktop
shift + alt - e : chunkc tiling::desktop --layout bsp
shift + alt - s : chunkc tiling::desktop --layout monocle

# kill focused window
shift + alt - q : chunkc tiling::window --close

# change focus
# shift + alt - left : chunkc tiling::window --focus west
# shift + alt - down : chunkc tiling::window --focus south
# shift + alt - up : chunkc tiling::window --focus north
# shift + alt - right : chunkc tiling::window --focus east
alt - up : chunkc tiling::window --focus prev
alt - down : chunkc tiling::window --focus next

# move focused container to workspace
shift + alt - left : chunkc tiling::window --send-to-desktop prev
shift + alt - right : chunkc tiling::window --send-to-desktop next
